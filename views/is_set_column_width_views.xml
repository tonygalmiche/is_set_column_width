<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue List -->
    <record id="is_set_column_width_list" model="ir.ui.view">
        <field name="name">is.set.column.width.list</field>
        <field name="model">is.set.column.width</field>
        <field name="arch" type="xml">
            <list string="Largeurs de colonnes">
                <field name="user_id"/>
                <field name="view_key"/>
                <field name="column_widths" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="is_set_column_width_form" model="ir.ui.view">
        <field name="name">is.set.column.width.form</field>
        <field name="model">is.set.column.width</field>
        <field name="arch" type="xml">
            <form string="Largeurs de colonnes">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="view_key"/>
                        </group>
                    </group>
                    <group string="Largeurs des colonnes (JSON)">
                        <field name="column_widths" nolabel="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="is_set_column_width_search" model="ir.ui.view">
        <field name="name">is.set.column.width.search</field>
        <field name="model">is.set.column.width</field>
        <field name="arch" type="xml">
            <search string="Recherche largeurs de colonnes">
                <field name="user_id"/>
                <field name="view_key"/>
                <filter string="Mes préférences" name="my_prefs" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Utilisateur" name="group_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="is_set_column_width_action" model="ir.actions.act_window">
        <field name="name">Préférences de colonnes</field>
        <field name="res_model">is.set.column.width</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="is_set_column_width_search"/>
        <field name="context">{'search_default_my_prefs': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune préférence de colonnes mémorisée
            </p>
            <p>
                Les préférences sont automatiquement sauvegardées lorsque vous :
                <ul>
                    <li>Redimensionnez une colonne dans un tableau</li>
                    <li>Activez/désactivez des colonnes optionnelles via l'icône ⚙️</li>
                </ul>
            </p>
        </field>
    </record>

    <!-- Menu dans Paramètres / Utilisateurs et société -->
    <menuitem 
        id="is_set_column_width_menu"
        name="Préférences de colonnes"
        action="is_set_column_width_action"
        parent="base.menu_users"
        sequence="100"/>

</odoo>
